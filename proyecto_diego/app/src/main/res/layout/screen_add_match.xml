<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtPartido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARTIDO: 1"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:id="@+id/txtPrimerEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipo: Club Cordillera"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"/>

    <EditText
        android:id="@+id/txtJugadorUno"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:hint=  "Nombre del primer jugador"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="23dp"
        android:textStyle="bold"
        android:textColorHint="@color/blueGrey3"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/txtJugadorDos"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:hint=  "Nombre del segunod jugador"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"
        android:textStyle="bold"
        android:textColorHint="@color/blueGrey3"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtSegundoEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipo: Club Cordillera"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"/>

    <EditText
        android:id="@+id/txtJugadorTres"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:hint=  "Nombre del primer jugador"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="23dp"
        android:textStyle="bold"
        android:textColorHint="@color/blueGrey3"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/txtJugadorCuatro"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:hint=  "Nombre del segunod jugador"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"
        android:textStyle="bold"
        android:textColorHint="@color/blueGrey3"
        android:textColor="@color/white"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAtras"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Atras"
            android:visibility="invisible"
            android:background="@drawable/edit_text_border_2"
            android:layout_gravity="bottom"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Siguiente"
            android:background="@drawable/edit_text_border_2"
            android:layout_gravity="bottom"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>

</LinearLayout>